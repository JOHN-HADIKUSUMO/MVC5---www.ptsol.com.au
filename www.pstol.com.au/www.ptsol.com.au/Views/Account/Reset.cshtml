@{
    ViewBag.Title = "Log in";
}
<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
    <div class="container">
        <h1 class="pull-left">Reset Password</h1>
        <ul class="pull-right breadcrumb">
            <li><span>Account</span></li>
            <li class="active">Reset Password</li>
        </ul>
    </div>
</div>
<!--=== End Breadcrumbs ===-->
<!--=== Content Part ===-->
<div class="container content" ng-app="appModule" ng-init="guid='@Html.Raw(ViewBag.GUID)'">
    <div class="row" ng-controller="resetController">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <form class="reg-page" role="form">
                <div class="reg-header">
                    <h2>Resetting Your Password</h2>
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input type="text" placeholder="Username" class="form-control" ng-model="username" />
                </div>
                <div class="input-group  margin-bottom-20" ng-if="username_e == ''">

                </div>
                <div class="input-group" ng-if="username_e != ''">
                    <label class="warning" ng-if="username_e != ''">{{username_e}}</label>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <img ng-src="{{urlcaptcha}}" alt="Security" title="Security" width="150" height="45" />
                    </div>
                    <div class="col-md-4 margin-top-10">
                        <input type="text" placeholder="Answer" class="form-control" ng-model="answer" />
                    </div>
                </div>
                <div class="input-group margin-bottom-20">
                    <label class="warning" ng-if="answer_e != ''">{{answer_e}}</label>
                </div>
                <div class="row margin-top-20">
                    <div class="col-md-6">
                        &nbsp;
                    </div>
                    <div class="col-md-6">
                        <button class="btn-u pull-right" ng-click="click()" type="submit">Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div><!--/row-->
</div><!--/container-->
<!--=== End Content Part ===-->
@section Css {
    <link href="~/Content/pages/login.css" rel="stylesheet" />
    <link href="~/Scripts/custom/modalInfoController.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/Scripts/custom/appModule.js"></script>
    <script src="~/Scripts/custom/modalInfoController.js"></script>
    <script src="~/Scripts/custom/resetService.js"></script>
    <script src="~/Scripts/custom/resetController.js"></script>
}