@{
    ViewBag.Title = "Register";
}
<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
    <div class="container">
        <h1 class="pull-left">Change Password</h1>
        <ul class="pull-right breadcrumb">
            <li><span>Account</span></li>
            <li class="active">Change Password</li>
        </ul>
    </div>
</div>
<!--=== End Breadcrumbs ===-->
<!--=== Content Part ===-->
<div class="container content" ng-app="appModule" ng-init="username='@Html.Raw(ViewBag.Username)';stamp='@Html.Raw(ViewBag.Stamp)'">
    <div class="row margin-bottom-30" ng-controller="changePwdController">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <form id="contactForm" class="reg-page" role="form">
                <div class="reg-header">
                    <h2>Enter your new password</h2>
                </div>
                <label>New Password</label>
                <input type="password" class="form-control" ng-model="password" ng-blur="checkpassword()" />
                <label class="warning" ng-if="password_e != ''">{{password_e}}</label>
                <label>Confirm New Password</label>
                <input type="password" class="form-control" ng-model="conpassword" ng-blur="checkconpassword()" />
                <label class="warning" ng-if="conpassword_e != ''">{{conpassword_e}}</label>
                <input type="hidden" ng-model="username" />
                <input type="hidden" ng-model="stamp" />
                <br />
                <div class="row">
                    <div class="col-lg-offset-6 col-lg-6 text-right">
                        <button class="btn-u" type="submit"  ng-click="click()">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div><!--/container-->
<!--=== End Content Part ===-->
@section Css {
    <link href="~/Content/pages/login.css" rel="stylesheet" />
    <link href="~/Scripts/custom/modalInfoController.css" rel="stylesheet" />
    <style>
        .warning {
            display: block;
        }
    </style>
}

@section Scripts {
    <script src="~/Scripts/custom/appModule.js"></script>
    <script src="~/Scripts/custom/modalInfoController.js"></script>
    <script src="~/Scripts/custom/changePwdService.js"></script>
    <script src="~/Scripts/custom/changePwdController.js"></script>
}